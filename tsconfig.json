{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2017",
        "module": "CommonJS",
        "lib": ["es6", "DOM"],
        // "rootDir": "./",
        "baseUrl": "./src",
        "outDir": "./build",
        "types": ["reflect-metadata"],
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "declarationDir": "./types",
    },
    "include": ["./src/**/*.ts", "./examples/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}