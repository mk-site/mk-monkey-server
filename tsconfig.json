{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2017",
        "module": "CommonJS",
        "lib": ["es6", "DOM"],
        "rootDir": "./src",
        "outDir": "./build",
        "types": ["reflect-metadata"],
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}